<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Configuration E-commerce par défaut -->
        <record id="default_ecommerce_config" model="ecommerce.config">
            <field name="name">Configuration E-commerce</field>
            <field name="frontend_url">http://localhost:3000</field>
            <field name="webhook_secret">change_me_in_production</field>
            <field name="products_per_page">24</field>
            <field name="show_out_of_stock" eval="True"/>
            <field name="enable_wishlist" eval="True"/>
            <field name="enable_comparison" eval="True"/>
            <field name="cart_session_duration">7</field>
            <field name="min_order_amount">0.0</field>
            <field name="enable_auto_slug" eval="True"/>
            <field name="webhook_stock_change" eval="True"/>
            <field name="webhook_order_confirmed" eval="True"/>
            <field name="webhook_product_updated" eval="True"/>
            <field name="enable_guest_checkout" eval="False"/>
            <field name="default_meta_description">Découvrez nos produits Quelyos - Qualité et innovation au meilleur prix</field>
        </record>
    </data>
</odoo>
