<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire Configuration E-commerce -->
    <record id="view_ecommerce_config_form" model="ir.ui.view">
        <field name="name">ecommerce.config.form</field>
        <field name="model">ecommerce.config</field>
        <field name="arch" type="xml">
            <form string="Configuration E-commerce">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la configuration"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Général">
                            <group>
                                <group string="URLs et Intégration">
                                    <field name="frontend_url"/>
                                    <field name="webhook_secret" password="True"/>
                                </group>
                                <group string="Configuration Catalogue">
                                    <field name="products_per_page"/>
                                    <field name="show_out_of_stock"/>
                                    <field name="enable_wishlist"/>
                                    <field name="enable_comparison"/>
                                </group>
                            </group>
                        </page>
                        <page string="Panier et Commandes">
                            <group>
                                <group string="Panier">
                                    <field name="cart_session_duration"/>
                                    <field name="min_order_amount"/>
                                    <field name="enable_guest_checkout"/>
                                </group>
                            </group>
                        </page>
                        <page string="SEO">
                            <group>
                                <group>
                                    <field name="enable_auto_slug"/>
                                    <field name="default_meta_description"/>
                                </group>
                            </group>
                        </page>
                        <page string="Webhooks">
                            <group>
                                <group string="Événements activés">
                                    <field name="webhook_stock_change"/>
                                    <field name="webhook_order_confirmed"/>
                                    <field name="webhook_product_updated"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste Configuration E-commerce -->
    <record id="view_ecommerce_config_tree" model="ir.ui.view">
        <field name="name">ecommerce.config.list</field>
        <field name="model">ecommerce.config</field>
        <field name="arch" type="xml">
            <list string="Configurations E-commerce">
                <field name="name"/>
                <field name="frontend_url"/>
                <field name="enable_wishlist"/>
                <field name="enable_comparison"/>
            </list>
        </field>
    </record>

    <!-- Action Configuration E-commerce -->
    <record id="action_ecommerce_config" model="ir.actions.act_window">
        <field name="name">Configuration E-commerce</field>
        <field name="res_model">ecommerce.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configurer votre module e-commerce
            </p>
            <p>
                Définissez les paramètres de votre boutique en ligne,
                les URLs du frontend, et activez les fonctionnalités souhaitées.
            </p>
        </field>
    </record>

    <!-- Menu E-commerce -->
    <menuitem id="menu_ecommerce_root"
              name="E-commerce"
              sequence="100"
              web_icon="quelyos_ecommerce,static/description/icon.png"/>

    <menuitem id="menu_ecommerce_config"
              name="Configuration"
              parent="menu_ecommerce_root"
              action="action_ecommerce_config"
              sequence="100"/>

    <!-- Vue formulaire Wishlist -->
    <record id="view_product_wishlist_form" model="ir.ui.view">
        <field name="name">product.wishlist.form</field>
        <field name="model">product.wishlist</field>
        <field name="arch" type="xml">
            <form string="Wishlist">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="date_added"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste Wishlist -->
    <record id="view_product_wishlist_tree" model="ir.ui.view">
        <field name="name">product.wishlist.list</field>
        <field name="model">product.wishlist</field>
        <field name="arch" type="xml">
            <list string="Wishlists">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="date_added"/>
            </list>
        </field>
    </record>

    <!-- Action Wishlist -->
    <record id="action_product_wishlist" model="ir.actions.act_window">
        <field name="name">Wishlists</field>
        <field name="res_model">product.wishlist</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_product_wishlist"
              name="Wishlists"
              parent="menu_ecommerce_root"
              action="action_product_wishlist"
              sequence="10"/>
</odoo>
