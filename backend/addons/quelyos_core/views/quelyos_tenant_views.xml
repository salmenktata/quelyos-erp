<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tenant Tree View -->
    <record id="view_quelyos_tenant_tree" model="ir.ui.view">
        <field name="name">quelyos.tenant.tree</field>
        <field name="model">quelyos.tenant</field>
        <field name="arch" type="xml">
            <tree string="Tenants">
                <field name="name"/>
                <field name="code"/>
                <field name="domain"/>
                <field name="country_id"/>
                <field name="subscription_plan"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-warning="state == 'provisioning'" decoration-danger="state == 'suspended'"/>
                <field name="created_at"/>
            </tree>
        </field>
    </record>

    <!-- Tenant Form View -->
    <record id="view_quelyos_tenant_form" model="ir.ui.view">
        <field name="name">quelyos.tenant.form</field>
        <field name="model">quelyos.tenant</field>
        <field name="arch" type="xml">
            <form string="Tenant">
                <header>
                    <button name="action_provision" string="Provision" type="object" class="btn-primary" states="draft"/>
                    <button name="action_activate" string="Activate" type="object" class="btn-success" states="provisioning"/>
                    <button name="action_suspend" string="Suspend" type="object" class="btn-warning" states="active"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,provisioning,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tenant Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="code"/>
                            <field name="domain"/>
                            <field name="company_id"/>
                        </group>
                        <group string="Location">
                            <field name="country_id"/>
                            <field name="currency_id"/>
                            <field name="timezone"/>
                        </group>
                    </group>
                    <group>
                        <group string="Contact">
                            <field name="admin_email"/>
                            <field name="admin_phone"/>
                        </group>
                        <group string="Subscription">
                            <field name="subscription_plan"/>
                            <field name="subscription_start"/>
                            <field name="subscription_end"/>
                        </group>
                    </group>
                    <group string="Features">
                        <field name="pos_enabled"/>
                        <field name="ecommerce_enabled"/>
                        <field name="mobile_app_enabled"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tenant Action -->
    <record id="action_quelyos_tenant" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">quelyos.tenant</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tenant
            </p>
            <p>
                Tenants represent individual customers using the Quelyos platform.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_quelyos_root" name="Quelyos" sequence="1"/>
    <menuitem id="menu_quelyos_tenants" name="Tenants" parent="menu_quelyos_root" action="action_quelyos_tenant" sequence="10"/>
</odoo>
