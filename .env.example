# ===========================================
# QUELYOS ERP - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Database
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quelyos
DB_USER=odoo
DB_PASSWORD=your_secure_password_here

# ===========================================
# Odoo
# ===========================================
ODOO_HOST=localhost
ODOO_PORT=8069
ODOO_ADMIN_PASSWORD=admin

# ===========================================
# Frontend
# ===========================================
VITE_API_URL=http://localhost:8069
VITE_APP_NAME=Quelyos

# ===========================================
# Device Bridge
# ===========================================
DEVICE_BRIDGE_PORT=3001
DEVICE_BRIDGE_SECRET=your_device_bridge_secret

# ===========================================
# Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=86400

# ===========================================
# Payment - Konnect (Tunisia)
# ===========================================
KONNECT_API_KEY=
KONNECT_SECRET_KEY=
KONNECT_MERCHANT_ID=
KONNECT_SANDBOX=true

# ===========================================
# Payment - Stripe (Morocco)
# ===========================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ===========================================
# Email (AWS SES)
# ===========================================
AWS_SES_REGION=eu-west-1
AWS_SES_ACCESS_KEY=
AWS_SES_SECRET_KEY=
EMAIL_FROM=noreply@quelyos.com

# ===========================================
# Storage (AWS S3)
# ===========================================
AWS_S3_REGION=eu-west-1
AWS_S3_BUCKET=quelyos-assets
AWS_S3_ACCESS_KEY=
AWS_S3_SECRET_KEY=

# ===========================================
# Monitoring
# ===========================================
DATADOG_API_KEY=
SENTRY_DSN=

# ===========================================
# Multi-tenant
# ===========================================
BASE_DOMAIN=saasretail.tn
