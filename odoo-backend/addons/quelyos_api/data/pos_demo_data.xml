<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ═══════════════════════════════════════════════════════════════════════════ -->
        <!-- SÉQUENCES POS -->
        <!-- ═══════════════════════════════════════════════════════════════════════════ -->

        <record id="seq_pos_order" model="ir.sequence">
            <field name="name">POS Order Sequence</field>
            <field name="code">quelyos.pos.order</field>
            <field name="prefix">POS/%(year)s/</field>
            <field name="padding">4</field>
        </record>

        <record id="seq_pos_session" model="ir.sequence">
            <field name="name">POS Session Sequence</field>
            <field name="code">quelyos.pos.session</field>
            <field name="prefix">SESSION/%(year)s/</field>
            <field name="padding">4</field>
        </record>

        <!-- ═══════════════════════════════════════════════════════════════════════════ -->
        <!-- MÉTHODES DE PAIEMENT -->
        <!-- ═══════════════════════════════════════════════════════════════════════════ -->

        <record id="pos_payment_method_cash" model="quelyos.pos.payment.method">
            <field name="name">Espèces</field>
            <field name="code">cash</field>
            <field name="type">cash</field>
            <field name="is_cash_count">True</field>
            <field name="sequence">1</field>
            <field name="active">True</field>
        </record>

        <record id="pos_payment_method_card" model="quelyos.pos.payment.method">
            <field name="name">Carte Bancaire</field>
            <field name="code">card</field>
            <field name="type">card</field>
            <field name="is_cash_count">False</field>
            <field name="sequence">2</field>
            <field name="active">True</field>
        </record>

        <record id="pos_payment_method_check" model="quelyos.pos.payment.method">
            <field name="name">Chèque</field>
            <field name="code">check</field>
            <field name="type">check</field>
            <field name="is_cash_count">False</field>
            <field name="sequence">3</field>
            <field name="active">True</field>
        </record>

        <record id="pos_payment_method_digital" model="quelyos.pos.payment.method">
            <field name="name">Paiement Digital</field>
            <field name="code">digital</field>
            <field name="type">digital</field>
            <field name="is_cash_count">False</field>
            <field name="sequence">4</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
