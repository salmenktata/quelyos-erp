<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquence pour les matricules employés -->
        <record id="seq_hr_employee" model="ir.sequence">
            <field name="name">Employee Number</field>
            <field name="code">quelyos.hr.employee</field>
            <field name="prefix">EMP-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Séquence pour les contrats -->
        <record id="seq_hr_contract" model="ir.sequence">
            <field name="name">Contract Reference</field>
            <field name="code">quelyos.hr.contract</field>
            <field name="prefix">CTR-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Séquence pour les demandes de congés -->
        <record id="seq_hr_leave" model="ir.sequence">
            <field name="name">Leave Request Reference</field>
            <field name="code">quelyos.hr.leave</field>
            <field name="prefix">DEM-%(year)s-</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Séquence pour les allocations de congés -->
        <record id="seq_hr_leave_allocation" model="ir.sequence">
            <field name="name">Leave Allocation Reference</field>
            <field name="code">quelyos.hr.leave.allocation</field>
            <field name="prefix">ALLOC-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
