        <record id="group_quelyos_store_user" model="res.groups">
            <field name="name">Store User</field>
            <field name="category_id" ref="module_category_quelyos_store"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Accès lecture/écriture limité à la boutique e-commerce</field>
        </record>

        <record id="group_quelyos_store_manager" model="res.groups">
            <field name="name">Store Manager</field>
            <field name="category_id" ref="module_category_quelyos_store"/>
            <field name="implied_ids" eval="[(4, ref('group_quelyos_store_user'))]"/>
