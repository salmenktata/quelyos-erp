            <field name="name">HR User</field>
            <field name="category_id" ref="module_category_quelyos_hr"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Accès lecture/écriture limité aux ressources humaines</field>
        </record>

        <record id="group_quelyos_hr_manager" model="res.groups">
            <field name="name">HR Manager</field>
            <field name="category_id" ref="module_category_quelyos_hr"/>
            <field name="implied_ids" eval="[(4, ref('group_quelyos_hr_user'))]"/>
