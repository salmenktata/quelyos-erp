<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- ========================================== -->
        <!-- Catégories de Modules -->
        <!-- ========================================== -->

        <record id="module_category_quelyos_stock" model="ir.module.category">
            <field name="name">Quelyos Stock</field>
            <field name="description">Gestion des stocks et inventaires</field>
            <field name="sequence">10</field>
        </record>

        <record id="module_category_quelyos_crm" model="ir.module.category">
            <field name="name">Quelyos CRM</field>
            <field name="description">Gestion de la relation client</field>
            <field name="sequence">20</field>
        </record>

        <record id="module_category_quelyos_store" model="ir.module.category">
            <field name="name">Quelyos Store</field>
            <field name="description">Boutique e-commerce</field>
            <field name="sequence">30</field>
        </record>

        <record id="module_category_quelyos_finance" model="ir.module.category">
            <field name="name">Quelyos Finance</field>
            <field name="description">Gestion financière et abonnements SaaS</field>
            <field name="sequence">40</field>
        </record>

        <record id="module_category_quelyos_marketing" model="ir.module.category">
            <field name="name">Quelyos Marketing</field>
            <field name="description">Campagnes marketing et promotions</field>
            <field name="sequence">50</field>
        </record>

        <record id="module_category_quelyos_hr" model="ir.module.category">
            <field name="name">Quelyos HR</field>
            <field name="description">Gestion des ressources humaines</field>
            <field name="sequence">60</field>
        </record>

        <record id="module_category_quelyos_home" model="ir.module.category">
            <field name="name">Quelyos Home</field>
            <field name="description">CMS et gestion du site web</field>
            <field name="sequence">70</field>
        </record>

        <!-- ========================================== -->
        <!-- Groupes Stock -->
        <!-- ========================================== -->

        <record id="group_quelyos_stock_user" model="res.groups">
            <field name="name">Stock User</field>
            <field name="category_id" ref="module_category_quelyos_stock"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Accès lecture/écriture limité aux stocks et inventaires</field>
        </record>

        <record id="group_quelyos_stock_manager" model="res.groups">
            <field name="name">Stock Manager</field>
            <field name="category_id" ref="module_category_quelyos_stock"/>
            <field name="implied_ids" eval="[(4, ref('group_quelyos_stock_user'))]"/>
            <field name="comment">Tous droits sur la gestion des stocks et inventaires</field>
        </record>

        <!-- ========================================== -->
        <!-- Groupes CRM -->
        <!-- ========================================== -->

        <record id="group_quelyos_crm_user" model="res.groups">
            <field name="name">CRM User</field>
            <field name="category_id" ref="module_category_quelyos_crm"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Accès lecture/écriture limité au CRM</field>
        </record>

        <record id="group_quelyos_crm_manager" model="res.groups">
            <field name="name">CRM Manager</field>
            <field name="category_id" ref="module_category_quelyos_crm"/>
            <field name="implied_ids" eval="[(4, ref('group_quelyos_crm_user'))]"/>
            <field name="comment">Tous droits sur le CRM</field>
