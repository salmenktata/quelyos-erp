<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Règle: Utilisateurs voient uniquement tickets de leur tenant -->
        <record id="ticket_rule_user_own_company" model="ir.rule">
            <field name="name">Ticket: User own company only</field>
            <field name="model_id" ref="model_quelyos_ticket"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Règle: Super Admin voit tout -->
        <record id="ticket_rule_system_all" model="ir.rule">
            <field name="name">Ticket: System admin sees all</field>
            <field name="model_id" ref="model_quelyos_ticket"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- Règle: Messages - Utilisateurs voient uniquement messages de tickets de leur tenant -->
        <record id="ticket_message_rule_user_own_company" model="ir.rule">
            <field name="name">Ticket Message: User own company only</field>
            <field name="model_id" ref="model_quelyos_ticket_message"/>
            <field name="domain_force">[('ticket_id.company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Règle: Messages - Super Admin voit tout -->
        <record id="ticket_message_rule_system_all" model="ir.rule">
            <field name="name">Ticket Message: System admin sees all</field>
            <field name="model_id" ref="model_quelyos_ticket_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>
