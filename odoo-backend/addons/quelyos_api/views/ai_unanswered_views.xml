<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ai_unanswered_tree" model="ir.ui.view">
        <field name="name">quelyos.ai.unanswered.tree</field>
        <field name="model">quelyos.ai.unanswered</field>
        <field name="arch" type="xml">
            <list string="Questions sans Réponse FAQ">
                <field name="message"/>
                <field name="frequency" string="Fréquence"/>
                <field name="create_date" string="Première Date"/>
                <field name="last_occurrence" string="Dernière Occurrence"/>
                <field name="is_reviewed" string="Révisé"/>
                <field name="should_add_faq" string="Ajouter FAQ"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ai_unanswered_form" model="ir.ui.view">
        <field name="name">quelyos.ai.unanswered.form</field>
        <field name="model">quelyos.ai.unanswered</field>
        <field name="arch" type="xml">
            <form string="Question sans Réponse FAQ">
                <sheet>
                    <group>
                        <group>
                            <field name="message" widget="text"/>
                            <field name="frequency" readonly="1"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="last_occurrence" readonly="1"/>
                            <field name="user_ip" readonly="1"/>
                        </group>
                    </group>
                    <group string="Actions">
                        <field name="is_reviewed"/>
                        <field name="should_add_faq"/>
                    </group>
                    <group string="Notes Internes">
                        <field name="notes" widget="text" placeholder="Notes sur cette question..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ai_unanswered_search" model="ir.ui.view">
        <field name="name">quelyos.ai.unanswered.search</field>
        <field name="model">quelyos.ai.unanswered</field>
        <field name="arch" type="xml">
            <search>
                <field name="message"/>
                <filter name="not_reviewed" string="Non Révisé" domain="[('is_reviewed', '=', False)]"/>
                <filter name="add_to_faq" string="À Ajouter FAQ" domain="[('should_add_faq', '=', True)]"/>
                <filter name="high_frequency" string="Fréquente (5+)" domain="[('frequency', '>=', 5)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_unanswered" model="ir.actions.act_window">
        <field name="name">Questions sans Réponse FAQ</field>
        <field name="res_model">quelyos.ai.unanswered</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_not_reviewed': 1, 'search_default_high_frequency': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune question loggée
            </p>
            <p>
                Les questions posées au chatbot qui n'ont pas trouvé de réponse dans la FAQ apparaîtront ici.
                Utilisez cette vue pour identifier les questions fréquentes et enrichir la FAQ.
            </p>
        </field>
    </record>

    <!-- Menu Super Admin / IA Configuration -->
    <menuitem
        id="menu_super_admin_ai"
        name="IA Configuration"
        parent="base.menu_administration"
        sequence="50"/>

    <menuitem
        id="menu_ai_unanswered"
        name="Questions Non-FAQ"
        parent="menu_super_admin_ai"
        action="action_ai_unanswered"
        sequence="20"/>
</odoo>
