<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SMS Log List View -->
    <record id="view_sms_log_tree" model="ir.ui.view">
        <field name="name">quelyos.sms.log.list</field>
        <field name="model">quelyos.sms.log</field>
        <field name="arch" type="xml">
            <list string="Historique SMS" decoration-success="status=='sent'" decoration-danger="status=='failed'" decoration-warning="status=='pending'">
                <field name="create_date" string="Date"/>
                <field name="mobile"/>
                <field name="message"/>
                <field name="notification_type"/>
                <field name="status"/>
                <field name="cost"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- SMS Log Form View -->
    <record id="view_sms_log_form" model="ir.ui.view">
        <field name="name">quelyos.sms.log.form</field>
        <field name="model">quelyos.sms.log</field>
        <field name="arch" type="xml">
            <form string="SMS Log">
                <header>
                    <field name="status" widget="statusbar"/>
                    <button name="action_retry" string="Réessayer" type="object"
                            invisible="not can_retry" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="mobile"/>
                            <field name="partner_id"/>
                            <field name="order_id"/>
                            <field name="notification_type"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="cost"/>
                            <field name="retry_count"/>
                            <field name="can_retry" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="message" widget="text"/>
                    </group>
                    <group string="Détails techniques" invisible="not error_message">
                        <field name="error_message" widget="text"/>
                        <field name="provider_response" widget="text"/>
                    </group>
                    <group string="Dates">
                        <group>
                            <field name="create_date" string="Créé le"/>
                            <field name="sent_date"/>
                        </group>
                        <group>
                            <field name="delivered_date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SMS Log Action -->
    <record id="action_sms_log" model="ir.actions.act_window">
        <field name="name">Historique SMS</field>
        <field name="res_model">quelyos.sms.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_sms_root" name="SMS"
              sequence="100"
              web_icon="quelyos_sms_tn,static/description/icon.png"/>

    <menuitem id="menu_sms_logs" name="Historique"
              parent="menu_sms_root"
              action="action_sms_log"
              sequence="10"/>
</odoo>
