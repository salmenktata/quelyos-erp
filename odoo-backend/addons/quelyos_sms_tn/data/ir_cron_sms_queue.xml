<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron: Process SMS Queue (every 5 minutes) -->
        <record id="ir_cron_sms_queue_process" model="ir.cron">
            <field name="name">SMS Queue: Process Pending</field>
            <field name="model_id" ref="model_quelyos_sms_provider_tunisie"/>
            <field name="state">code</field>
            <field name="code">model.process_pending_sms_queue()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
